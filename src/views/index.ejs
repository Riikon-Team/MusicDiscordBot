<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discord Music Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center mb-4">
                <h1>Discord Music Bot</h1>
                <p class="lead">Chọn một server để điều khiển nhạc</p>
                
                <% if (error) { %>
                <div class="alert alert-warning">
                    <%= error %>
                </div>
                <% } %>
            </div>
        </div>
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% if (guilds && guilds.length > 0) { %>
                <% guilds.forEach(guild => { %>
                    <div class="col">
                        <div class="card h-100">
                            <img src="<%= guild.icon %>" class="card-img-top guild-icon" alt="<%= guild.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= guild.name %></h5>
                                <% if (guild.currentSong) { %>
                                    <p class="card-text">
                                        <strong>Đang phát:</strong> <%= guild.currentSong.title %>
                                    </p>
                                <% } else { %>
                                    <p class="card-text">Không có bài hát nào đang phát</p>
                                <% } %>
                                <a href="/dashboard/<%= guild.id %>" class="btn btn-primary">Xem Dashboard</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else if (!error) { %>
                <div class="col-12">
                    <div class="alert alert-info">
                        Bot không có mặt trên server nào.
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>